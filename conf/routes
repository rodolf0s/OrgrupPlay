# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET 	/login						controllers.Application.login()
POST	/login						controllers.Application.comprobarLogin()
GET 	/registro					controllers.Application.registro()
POST	/registro					controllers.Application.comprobarRegistro()
GET		/registro					controllers.Application.comprobarRegistro()
GET		/logout						controllers.Application.logout()	
GET		/about						controllers.Application.about()
GET		/contacto					controllers.Application.contacto()
POST	/contacto					controllers.Application.guardaMensaje()
GET		/recuperar					controllers.Application.recuperar()
POST	/recuperar					controllers.Application.recuperarPassword()
GET		/verificar-cuenta			controllers.Application.verificaCuenta(correo: String, id: Integer)

#admin
GET		/administrador				controllers.Admin.iniciar()
POST	/administrador				controllers.Admin.comprobarLogin()
GET		/admin/mensaje				controllers.Admin.mensaje(p:Int ?= 0, f ?= "")
GET		/admin/leer-mensaje			controllers.Admin.leerMensaje(id: Long)
POST 	/admin/mensaje				controllers.Admin.eliminarMensaje(id: Long, p:Int ?= 0, f ?= "")
POST	/admin/elimina-mensajes		controllers.Admin.eliminarVarios(p:Int ?= 0, f ?= "")
GET		/admin/cuentas				controllers.Admin.cuentas(p:Int ?= 0, f ?= "")
GET		/admin/cambiar-password		controllers.Admin.cambiarPass()
POST	/admin/cambiar-password		controllers.Admin.cambioPass()
GET		/admin/logout				controllers.Admin.cerrarSesion()
GET		/admin/responder-mensaje	controllers.Admin.responder(id: Long)
POST	/admin/correo				controllers.Admin.enviarRespuesta(id: Long, p:Int ?= 0, f ?= "")
POST	/admin/desactiva			controllers.Admin.adminElimina(p:Int ?= 0, f ?= "")
GET		/admin/activa				controllers.Admin.adminActiva(correo: String, p:Int ?= 0, f ?= "")
GET		/index-admin				controllers.Admin.index()
GET		/index2-admin				controllers.Admin.index2()

#Agenda
GET		/app						controllers.Home.index()
POST	/app						controllers.Home.getTarea()
POST	/app/nueva-tarea			controllers.Home.guardaTarea(op: Integer)
POST	/app/edita-tarea			controllers.Home.editaTarea()
POST	/app/elimina-tarea			controllers.Home.eliminaTarea()

#Contactos
GET 	/contactos					controllers.Contactos.contactos()
POST 	/contactos 					controllers.Contactos.buscaContactos()
POST	/contactos2					controllers.Contactos.agregaContacto()
GET 	/agrega-contacto			controllers.Contactos.muestraAgregarContactos()
POST	/agrega-contacto			controllers.Contactos.agregaContactoBd()
POST	/elimina-solicitud			controllers.Contactos.eliminaSolicitud()
GET  	/gestionar-contactos		controllers.Contactos.gestionaContactos()
POST	/elimina-contacto			controllers.Contactos.eliminaContacto()
GET		/perfil						controllers.Contactos.muestraElPerfil(email: String)
GET		/mensaje-contacto			controllers.Contactos.muestraMensajeContacto()

#Mensajes
GET		/index						controllers.Mensajes.index()
GET		/index2						controllers.Mensajes.index2()
GET     /mensajes                  	controllers.Mensajes.mensajesRecibidos(p:Int ?= 0, f ?= "")
GET		/mensajes-enviados			controllers.Mensajes.mensajesEnviados(p:Int ?= 0, f ?= "")
GET		/crear-mensaje				controllers.Mensajes.crearMensaje()
GET		/muestra-mensaje			controllers.Mensajes.leerMensaje(id: Long)
POST	/envia-mensaje				controllers.Mensajes.enviaMensaje()
GET 	/mensajes-nuevos			controllers.Mensajes.mensajesNuevos()
POST	/elimina-mensajes			controllers.Mensajes.eliminaMensajes(pag: Integer)
POST	/envia-mensaje-modal		controllers.Mensajes.enviaMensajeModal(email: String)

#Cuenta
GET		/configurar/perfil			controllers.Cuenta.perfil()
POST	/configurar/perfil			controllers.Cuenta.actualizaPerfil()
GET		/configurar/password		controllers.Cuenta.password()
POST	/configurar/password		controllers.Cuenta.actualizaPassword()
GET		/configurar/colores			controllers.Cuenta.colores()
POST	/configurar/colores			controllers.Cuenta.actualizaColores()
GET		/configurar/cuenta			controllers.Cuenta.cuenta()
GET		/configurar/notificaciones	controllers.Cuenta.notificaciones()
POST	/configurar/notificaciones	controllers.Cuenta.guardaNotificaciones()
POST	/configurar/cuenta			controllers.Cuenta.desactivarCuenta()
GET		/configurar/activar-cuenta	controllers.Cuenta.activarCuenta()

#Grupo
GET		/grupos								controllers.Grupos.muestraGrupos()
POST	/crear-grupo						controllers.Grupos.crearGrupo(pag: Integer, id: Long, idReunion: Long)
GET		/grupo/:id							controllers.Grupos.index(id: Long)
POST	/grupo/agregar-integrante			controllers.Grupos.agregaIntegrante(pag: Integer)
GET		/grupo/:idGrupo/elimina-integrante	controllers.Grupos.eliminaIntegrante(email: String, idGrupo: Long)
POST	/grupo/edita-grupo					controllers.Grupos.editaGrupo()
GET		/grupo/elimina-grupo/:id			controllers.Grupos.eliminaGrupo(id: Long)
GET		/grupo/:id/reuniones				controllers.Grupos.muestraReuniones(id: Long)
GET		/grupo/:id/miembros					controllers.Grupos.muestraMiembros(id: Long)
GET		/grupo/:id/preferencias				controllers.Grupos.muestraPreferencias(id: Long)
GET		/grupo/:idGrupo/reunion/:idReunion	controllers.Grupos.verReunion(idReunion: Long, idGrupo: Long)
POST	/grupo/:idGrupo/reunion/:idReunion	controllers.Grupos.subeArchivo(idReunion: Long, idGrupo: Long)
GET		/grupo/descargar-archivo/:id		controllers.Grupos.descargarArchivo(id: Long, grupoId: Long)
GET		/grupo/eliminar-archivo/:idArchivo 	controllers.Grupos.eliminarArchivo(idArchivo: Long, idReunion: Long, idGrupo: Long)
POST	/grupo/cambia-admin					controllers.Grupos.cambiarAdmin()
GET		/grupo/:id/dejar-grupo				controllers.Grupos.dejarGrupo(id: Long)
GET 	/solicitudes-de-grupos				controllers.Grupos.muestraSolicitudes()
POST	/acepta-solicitud					controllers.Grupos.ingresarAGrupo()
POST	/elimina-solicitud-grupo			controllers.Grupos.eliminaInvitacion(id: Long)

#Reunion
POST	/generar					controllers.Reuniones.generarReunion(correo: String)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
