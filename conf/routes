# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET 	/Login						controllers.Application.login()
POST	/Login						controllers.Application.comprobarLogin()
GET 	/Registro					controllers.Application.registro()
POST	/Registro					controllers.Application.comprobarRegistro()
GET		/Registro					controllers.Application.comprobarRegistro()
GET		/Logout						controllers.Application.logout()	
GET		/About						controllers.Application.about()
GET		/Contacto					controllers.Application.contacto()
POST	/Contacto					controllers.Application.guardaMensaje()
GET		/Recuperar					controllers.Verificador.index()
POST	/Recuperar					controllers.Verificador.enviaDatos()
GET		/VerificaCuenta				controllers.Verificador.verificaCuenta(id: Integer)

#admin
GET		/Administrador				controllers.Administrador.iniciar()
POST	/Administrador				controllers.Administrador.comprobarLogin()
GET		/Mensajes					controllers.Administrador.mensaje()
GET		/Cuentas					controllers.Administrador.cuentas()
GET		/Administradores			controllers.Administrador.administradores()


#agenda
GET		/App						controllers.Home.index()
GET		/MiCuenta					controllers.Cuenta.miCuenta()
POST	/MiCuenta					controllers.Cuenta.configuraCuenta()
GET 	/Contactos					controllers.Contacto.contactos()
GET 	/Contactos 					controllers.Contacto.buscaContactos()

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
