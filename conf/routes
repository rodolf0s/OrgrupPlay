# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page
GET     /                           controllers.Application.index()
GET 	/login						controllers.Application.login()
POST	/login						controllers.Application.comprobarLogin()
GET 	/registro					controllers.Application.registro()
POST	/registro					controllers.Application.comprobarRegistro()
GET		/registro					controllers.Application.comprobarRegistro()
GET		/logout						controllers.Application.logout()	
GET		/about						controllers.Application.about()
GET		/contacto					controllers.Application.contacto()
POST	/contacto					controllers.Application.guardaMensaje()
GET		/recuperar					controllers.Application.recuperar()
POST	/recuperar					controllers.Application.recuperarPassword()
GET		/verificar-cuenta			controllers.Application.verificaCuenta(correo: String, id: Integer)

#admin
GET		/administrador				controllers.Admin.iniciar()
POST	/administrador				controllers.Admin.comprobarLogin()
GET		/mensaje					controllers.Admin.mensaje()
GET		/leer-mensaje				controllers.Admin.leerMensaje(id: Long)
POST 	/mensaje					controllers.Admin.eliminarMensaje(id: Long)
POST	/elimina					controllers.Admin.eliminarVarios()
GET		/cuentas					controllers.Admin.cuentas()
GET		/cambiar-password			controllers.Admin.cambiarPass()
POST	/cambiar-password			controllers.Admin.cambioPass()
GET		/logout-admin				controllers.Admin.cerrarSesion()
GET		/responder					controllers.Admin.responder(id: Long)
POST	/correo						controllers.Admin.enviarRespuesta(id: Long)
POST	/desactiva					controllers.Admin.adminElimina()
GET		/activa						controllers.Admin.adminActiva(correo: String)

#Agenda
GET		/app						controllers.Home.index()
POST	/app						controllers.Home.getTarea()
POST	/app/nueva-tarea			controllers.Home.guardaTarea()
POST	/app/edita-tarea			controllers.Home.editaTarea()
POST	/app/elimina-tarea			controllers.Home.eliminaTarea()
POST	/crear-grupo-home			controllers.Home.crearGrupo()

#Contactos
GET 	/contactos					controllers.Contactos.contactos()
POST 	/contactos 					controllers.Contactos.buscaContactos()
POST	/contactos2					controllers.Contactos.agregaContacto()
GET 	/agregaContactos			controllers.Contactos.muestraAgregarContactos()
POST	/agregaContacto				controllers.Contactos.agregaContactoBd()
POST	/eliminaSolicitud			controllers.Contactos.eliminaSolicitud()
GET  	/gestionarContactos			controllers.Contactos.gestionaContactos()
POST	/eliminaContacto			controllers.Contactos.eliminaContacto()
POST	/perfil						controllers.Contactos.muestraElPerfil(email: String)

#Mensajes
GET 	/mensajes					controllers.Mensajes.mensajesRecibidos()
GET		/mensajesEnviados			controllers.Mensajes.mensajesEnviados()
GET		/crearMensaje				controllers.Mensajes.crearMensaje()
GET		/muestraMensaje				controllers.Mensajes.leerMensaje(id: Long)
POST	/enviaMensaje				controllers.Mensajes.enviaMensaje()
GET 	/mensajesNuevos				controllers.Mensajes.mensajesNuevos()
POST	/eliminaMensajes			controllers.Mensajes.eliminaMensajes()
POST	/enviaMensajeModal			controllers.Mensajes.enviaMensajeModal(email: String)

#Cuenta
GET		/configurar/perfil			controllers.Cuenta.perfil()
POST	/configurar/perfil			controllers.Cuenta.actualizaPerfil()
GET		/configurar/password		controllers.Cuenta.password()
POST	/configurar/password		controllers.Cuenta.actualizaPassword()
GET		/configurar/colores			controllers.Cuenta.colores()
POST	/configurar/colores			controllers.Cuenta.actualizaColores()
GET		/configurar/cuenta			controllers.Cuenta.cuenta()
POST	/configurar/cuenta			controllers.Cuenta.desactivarCuenta()

#Grupo
GET		/grupos						controllers.Grupos.muestraGrupos()
POST	/crear-grupo				controllers.Grupos.crearGrupo()
GET		/grupo/:id					controllers.Grupos.index(id: Long)
POST	/grupo/agregar-integrante	controllers.Grupos.agregaIntegrante()
POST	/grupo/elimina-integrante	controllers.Grupos.eliminaIntegrante()
POST	/grupo/edita-grupo			controllers.Grupos.editaGrupo()
POST	/grupo/elimina-grupo		controllers.Grupos.eliminaGrupo()
GET		/grupo/:id/reuniones		controllers.Grupos.muestraReuniones(id: Long)
POST	/grupo/:id/reuniones		controllers.Grupos.getArchivo(id: Long)
GET		/grupo/:id/documentos		controllers.Grupos.muestraDocumentos(id: Long)
GET		/grupo/:id/miembros			controllers.Grupos.muestraMiembros(id: Long)
GET		/grupo/:id/preferencias		controllers.Grupos.muestraPreferencias(id: Long)

# Map static resources from the /public folder to the /assets URL path
GET     /assets/*file               controllers.Assets.at(path="/public", file)
